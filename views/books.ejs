<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs') %>
    </head>
    <body>
        <%- include('partials/navigation.ejs') %>

        <h1>Books list</h1>

        <% if (books && books.length > 0) { %>
            <ul>
                <% books.forEach(book => { %>
                    <li>
                        <p><%= book.title %></p>
                        <p><%= book.publishingYear %></p>
                        <form action="/book/delete/<%= book.id %>" method="post" onsubmit="return confirm('Are you sure?');">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No books have been found.</p>
        <% } %>
    </body>
</html>